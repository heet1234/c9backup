<% include ../partials/header %>

<div class="container" >
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To MySmallJourney!</h1>
            <p>view the places that you must before you die!!</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New City</a>
            </p>
        </div>
    </header>
    <div class="row align-items-center" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6" >
                <div class="thumbnail">
                    <img src="<%= campground.image %>" class="img-fluid" style="object-fit: cover; width: 100%; max-height: 100%;">
                    <div class="caption-full">
                        <h4><%= campground.name %></h4>
						<p>
                        	<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    	</p>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>


<% include ../partials/footer %>